<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent">

    <TextView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:text="Month Statistics"
        android:textColor="#070000"
        android:layout_x="10px"
        android:layout_y="10px"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="totalmiles"
        android:id="@+id/totalmiles_month"
        android:textColor="#000000"
        android:layout_x="10px"
        android:layout_y="130px"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_x="500px"
        android:src="@drawable/run"
        android:layout_y="130px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="totaltime"
        android:id="@+id/totaltime_month"
        android:textColor="#000000"
        android:layout_x="10px"
        android:layout_y="450px"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_x="500px"
        android:src="@drawable/hourglass"
        android:layout_y="450px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="totalcalories"
        android:id="@+id/totalcalories_month"
        android:textColor="#000000"
        android:layout_x="10px"
        android:layout_y="780px"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_x="500px"
        android:src="@drawable/calories"
        android:layout_y="780px"/>


</AbsoluteLayout>