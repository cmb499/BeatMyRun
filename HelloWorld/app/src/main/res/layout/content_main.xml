<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView android:text="BPM" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BPM"
        android:textStyle="bold"
        android:typeface="sans"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textColor="#330066"
        android:layout_alignParentStart="true"
        android:editable="false"
        android:cursorVisible="false"
        android:background="#DDDDDD"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/BPM"
        android:textSize="60dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="#FF3300"
        android:cursorVisible="false"
        android:layout_alignEnd="@+id/BPM"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:background="#DDDDDD" />

    <TextView
        android:text="Steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num_steps"
        android:layout_below="@+id/timer"
        android:layout_marginTop="50dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="#991177"
        android:cursorVisible="false"
        android:layout_alignEnd="@+id/timer"
        android:layout_alignParentStart="true"
        android:background="#DDDDDD"
        android:textAlignment="center" />
</RelativeLayout>
