<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_marginLeft="10dp"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="left" android:orientation="horizontal"
        android:layout_marginTop="15dp" android:paddingBottom="30dp">
    <ImageView
        android:id="@+id/personId"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/person"
        android:layout_gravity="right"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="right" android:orientation="vertical"
        android:layout_marginRight="10dp" android:layout_marginLeft="190dp" android:layout_marginTop="10dp" android:paddingBottom="10dp">

        <ImageButton
            android:id="@+id/logoutId"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/logout"
            android:layout_gravity="right"
            android:clickable="true"/>

        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Logout"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:id="@+id/logoutText"></TextView>
    </LinearLayout>

    </LinearLayout>



    <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Username">
        </TextView>
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:id="@+id/usernameField"
            android:textStyle="normal"
            android:singleLine="true"
            android:inputType="text">
        </EditText>

        <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Email"></TextView>

        <EditText
            android:id="@+id/emailField"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />

         <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Height"></TextView>

        <EditText
            android:id="@+id/heightField"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Weight"></TextView>
        <EditText
            android:id="@+id/weightField"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>


    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Age"></TextView>

        <EditText
            android:id="@+id/ageField"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>


        <Button
            android:id="@+id/submit"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="submit"
            android:layout_gravity="center_horizontal"
            android:text="Submit"
            android:background="#FFBB0C0C"
            android:textColor="#FFF" />


</LinearLayout>