<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_winner"
    tools:context="com.example.niralishah.sendchallengev1.Winner"
    android:background="#FFFFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="WINNER"
        android:id="@+id/winner"
        android:textColor="#000000"
        android:layout_below="@+id/winnerresult"
        android:layout_toStartOf="@+id/imageView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/winnerresult"

     />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:src="@drawable/win"

        android:layout_below="@+id/logoImage2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="44dp" />



    <ImageView
        android:id="@+id/logoImage2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cup"

        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/winnerresult" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:textColor="#fff"
        android:id="@+id/statButton"
        android:layout_below="@+id/winnerresult"
        android:layout_alignParentEnd="true"
        android:background="#ffbb0c0c" />

</RelativeLayout>
